                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Button FontSize="30px" Background="#FF6C5200" Foreground="White" BorderThickness="8" BorderBrush="#FF262626" Command="{Binding BackCommand}">Back
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
