<Window x:Class="SafariView.View.LobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafariView.View"
        mc:Ignorable="d"
        Title="Lobby" Height="450" Width="800"
        FontFamily="Rockwell">
    <Grid Background="#FFA6CAEC">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.04*" />
            <RowDefinition Height="0.21*" />
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="0.2*" />
            <RowDefinition Height="0.02*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="1" Grid.Column="1" BorderThickness="10" BorderBrush="#FF13501B" Grid.RowSpan="1" Background="#FFC3DBAD" CornerRadius="5">
            <Viewbox>
                <TextBlock FontSize="60px" TextAlignment="Center" VerticalAlignment="Center" Foreground="#FF926F00" Text="{Binding OptionName}"></TextBlock>
            </Viewbox>
        </Border>
        <Border Grid.Row="2" Grid.Column="1" BorderBrush="DimGray" BorderThickness="10,0,10,0" Margin="50,0,50,0" />
        <Border Grid.Row="3" Grid.Column="1" BorderBrush="#FF262626" BorderThickness="10" Background="#FF6C5200" CornerRadius="5" Visibility="{Binding IndexPage}">
            <Viewbox>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF6C5200">
                    <Button Width="140" Height="40" Background="#FF6C5200" Foreground="White" FontSize="20" BorderThickness="0" Command="{Binding SlotPickerPageCommand}">New Game</Button>
                    <Button Width="140" Height="40" Background="#FF6C5200" Foreground="White" FontSize="20" BorderThickness="0" Command="{Binding LoadGamePageCommand}">Load Game</Button>
                    <Button Width="140" Height="40" Background="#FF6C5200" Foreground="White" FontSize="20" BorderThickness="0" Command="{Binding CreditsCommand}">Credits</Button>
                    <Button Width="140" Height="40" Background="#FF6C5200" Foreground="White" FontSize="20" BorderThickness="0" Command="{Binding ExitGameCommand}">Exit to Desktop</Button>
                </StackPanel>
            </Viewbox>
        </Border>
        <Border Grid.Row="3" BorderBrush="#FF262626" BorderThickness="10" Background="#FF6C5200" CornerRadius="5" Grid.ColumnSpan="3" Margin="176,0,176,0" Visibility="{Binding NewGamePage}">
            <Viewbox>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF6C5200" Width="130">
                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                        <TextBlock FontSize="5.5" Width="45" VerticalAlignment="Center" Foreground="White" FontWeight="Bold">Name your park:</TextBlock>
                        <TextBox Width="85" BorderBrush="#FF13501B"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                        <TextBlock FontSize="8" Width="45" VerticalAlignment="Center" Foreground="White" FontWeight="Bold">Seed:</TextBlock>
                        <TextBox Width="85" BorderBrush="#FF13501B"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,3,0,3">
                        <TextBlock FontSize="8" Width="45" Foreground="White" FontWeight="Bold">Difficulty:</TextBlock>
                        <Button FontSize="6" Margin="0,0,7,0" BorderBrush="#FF13501B" Background="#FFC3DBAD" Foreground="#FF926F00">Easy
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="2" />
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button FontSize="6" Margin="0,0,7,0" BorderBrush="#FF13501B" Background="#FFC3DBAD" Foreground="#FF926F00">Medium
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="2" />
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button FontSize="6" Margin="0,0,7,0" BorderBrush="#FF13501B" Background="#FFC3DBAD" Foreground="#FF926F00">Hard
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="2" />
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Viewbox>
        </Border>
        <Viewbox Grid.Row="4" Grid.Column="1" Visibility="{Binding NewGamePage}">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <Border BorderBrush="DimGray" BorderThickness="10,0,10,0" Height="15" Width="60" Margin="10,0,0,0"/>
                    <Border BorderBrush="DimGray" BorderThickness="10,0,10,0" Height="15" Width="60" Margin="113,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <Button FontSize="30px" Background="#FF6C5200" Foreground="White" BorderThickness="8" BorderBrush="#FF262626" Command="{Binding BackCommand}"> Back
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button FontSize="30px" Background="#FF6C5200" Foreground="White" BorderThickness="8" BorderBrush="#FF262626" Margin="95,0,0,0" Command="{Binding StartCommand}">Start
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Button.Resources>
