                </StackPanel>
            </StackPanel>
        </Viewbox>
        <Border Grid.Row="3" BorderBrush="#FF262626" BorderThickness="10" Background="#FF6C5200" CornerRadius="5" Grid.ColumnSpan="3" Margin="176,0,176,0" Visibility="{Binding CreditsPage}">
            <Viewbox>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF6C5200" Width="130">
                    <TextBlock HorizontalAlignment="Center" Foreground="White" FontWeight="Bold">Lorem Ipsum team:</TextBlock>
                    <TextBlock HorizontalAlignment="Center" Foreground="White">Kárpáti Vince</TextBlock>
                    <TextBlock HorizontalAlignment="Center" Foreground="White">Sándor Zsombor</TextBlock>
                    <TextBlock HorizontalAlignment="Center" Foreground="White">Ferenczy Kata</TextBlock>
                </StackPanel>
            </Viewbox>
        </Border>
        <Viewbox Grid.Row="4" Grid.Column="1" Visibility="{Binding CreditsPage}">
