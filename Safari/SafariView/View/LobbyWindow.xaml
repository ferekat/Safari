<Window x:Class="SafariView.View.LobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafariView.View"
        mc:Ignorable="d"
        Title="LobbyWindow" Height="450" Width="800">
    <Grid Background="#FFA6CAEC">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.08*" />
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.53*"/>
            <RowDefinition Height="0.2*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="1" Grid.Column="1" BorderThickness="10" BorderBrush="#FF13501B" Grid.RowSpan="1" Background="#FFC3DBAD" CornerRadius="5">
            <Viewbox>
                <TextBlock FontSize="60px" TextAlignment="Center" FontFamily="Leelawadee" VerticalAlignment="Center" Foreground="#FF926F00">SAFARI</TextBlock>
            </Viewbox>
        </Border>
        <Border Grid.Row="2" Grid.Column="1" BorderBrush="DimGray" BorderThickness="10,0,10,0" Margin="50,0,50,0"/>
        <Border Grid.Row="3" Grid.Column="1" BorderBrush="#FF262626" BorderThickness="10" Background="#FF6C5200" CornerRadius="5">
            <Viewbox>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF6C5200">
                    <Button Width="140" Height="40" Background="#FF6C5200" Foreground="White" FontSize="20" BorderThickness="0">New Game</Button>
                    <Button Width="140" Height="40" Background="#FF6C5200" Foreground="White" FontSize="20" BorderThickness="0">Load Game</Button>
                    <Button Width="140" Height="40" Background="#FF6C5200" Foreground="White" FontSize="20" BorderThickness="0">Credits</Button>
                    <Button Width="140" Height="40" Background="#FF6C5200" Foreground="White" FontSize="20" BorderThickness="0" Command="{Binding ExitGameCommand}">Exit to Desktop</Button>
            </StackPanel>
            </Viewbox>
        </Border>
    </Grid>
</Window>
