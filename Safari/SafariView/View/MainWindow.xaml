<Window x:Class="SafariView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafariView"
        xmlns:vm="clr-namespace:SafariView.ViewModel"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Title="Safari" 
        FontFamily="Rockwell">
    <Window.Resources>
        <vm:OffsetMarginConverter x:Key="OffsetMarginConverter"/>
    </Window.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--Kiválasztott entity adatai-->
            <TextBlock Text="{Binding SelectedEntityData}" Visibility="{Binding EntityDataVisibility}" Panel.ZIndex="4" Background="White" Width="120" Height="100" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <!--Kiválasztott entity adatai-->

            <!--Minimap -->
            <Border Panel.ZIndex="3" BorderBrush="#FF6C5200" BorderThickness="{Binding MINIMAPBORDERTHICKNESS}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="{Binding MINIMAPSIZE, Mode=OneTime}" Height="{Binding MINIMAPSIZE, Mode=OneTime}">
                <Image Source="{Binding MinimapBitmap}" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            </Border>
            <Border Panel.ZIndex="3" BorderBrush="#FF6C5200" BorderThickness="{Binding MINIMAPBORDERTHICKNESS}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="{Binding MINIMAPSIZE, Mode=OneTime}" Height="{Binding MINIMAPSIZE, Mode=OneTime}">
                <Canvas Background="Transparent" MouseDown="MinimapCanvas_MouseDown" x:Name="minimapCanvas">
                    <Rectangle Width="{Binding PlayerMarkerWidth}" Height="{Binding PlayerMarkerHeight}" Fill="Transparent" Stroke="White" Margin="{Binding MinimapPosition}"/>
                </Canvas>
            </Border>
            <!--Minimap -->

            <!--> UI elemek</!-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="{Binding TopRowHeightString}"  />
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="{Binding BottomRowHeightString}"/>
                </Grid.RowDefinitions>
                
                <!--Tileok megjelenítése/!-->
                <vm:TileCanvas Panel.ZIndex="0" Background="{Binding BackgroundBrush,Mode=OneTime}" IsHitTestVisible="False" Grid.Row="1" x:Name="tileCanvas"/>

                <!--Entityk megjelenítése/!-->
                <vm:TileCanvas Panel.ZIndex="1" Background="Transparent" IsHitTestVisible="False" Grid.Row="1" x:Name="entityCanvas"/>
                <ItemsControl Grid.Row="1" Panel.ZIndex="1" >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas Background="Transparent" MouseDown="TileMapCanvas_MouseDown">
                            </Canvas>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Rectangle MouseDown="TileMapCanvas_MouseDown">
                            </Rectangle>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Floating texts -->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding FloatingTexts}" Panel.ZIndex="2">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Text}"
                                       Foreground="Red"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="{Binding Margin}"
                                       Opacity="1"
                                       >
                                <TextBlock.Triggers>
                                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                    From="{Binding Margin}"
                                                                    To="{Binding Margin, Converter={StaticResource OffsetMarginConverter}, ConverterParameter=-20}"
                                                                    Duration="0:0:0.6" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </TextBlock.Triggers>
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                   
                <Grid Panel.ZIndex="2" Background="#FF6C5200" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" BorderBrush="#FF1B5019" Background="#FFC3DBAD" Foreground="#FFA3963F" Margin="10,10,10,10" FontSize="30px" HorizontalAlignment="Left">MENU</Button>
                    <TextBlock Grid.Column="1" FontSize="30px" Padding="30,5,30,5" Background="#FFFFD243" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10" Text="{Binding Month}"></TextBlock>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Background="#FFC3DBAD" Margin="8">
                            <StackPanel Orientation="Vertical" Margin="5,0,20,0">
                                <TextBlock HorizontalAlignment="Center" Foreground="#FFAAA556" FontSize="20px">H</TextBlock>
                                <TextBlock HorizontalAlignment="Center" Foreground="#FFAAA556" FontSize="20px" Text="{Binding Hour}"/>
                                <Button HorizontalAlignment="Left" FontSize="20px" Command="{Binding ChangedGameSpeed}" CommandParameter="Slow" BorderBrush="Transparent" Background="Transparent" Content="▶">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Gamespeed}" Value="Slow">
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="20,0,20,0">
                                <TextBlock HorizontalAlignment="Center" Foreground="#FFAAA556" FontSize="20px">D</TextBlock>
                                <TextBlock HorizontalAlignment="Center" Foreground="#FFAAA556" FontSize="20px" Text="{Binding Day}"/>
                                <Button HorizontalAlignment="Left" FontSize="20px" Command="{Binding ChangedGameSpeed}" CommandParameter="Medium" BorderBrush="Transparent" Background="Transparent" Content="▶▶">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Gamespeed}" Value="Medium">
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="20,0,5,0">
                                <TextBlock HorizontalAlignment="Center" Foreground="#FFAAA556" FontSize="20px">W</TextBlock>
                                <TextBlock HorizontalAlignment="Center" Foreground="#FFAAA556" FontSize="20px" Text="{Binding Week}"/>
                                <Button HorizontalAlignment="Left" FontSize="20px" Command="{Binding ChangedGameSpeed}" CommandParameter="Fast" BorderBrush="Transparent" Background="Transparent" Content="▶▶▶">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Gamespeed}" Value="Fast">
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock FontSize="30px" Margin="10" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFC3DBAD" Foreground="#FFAAA556" Text="{Binding MoneyString}"></TextBlock>
                    </StackPanel>
                </Grid>
                <Grid Panel.ZIndex="2" Grid.Row="2" Background="#FF6C5200" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.17*" />
                        <ColumnDefinition Width="0.66*"/>
                        <ColumnDefinition Width="0.17*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.05*"/>
                            <ColumnDefinition Width="0.85*" />
                            <ColumnDefinition Width="0.1*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="1">
                           
                            <Button Height="60" Width="60" Command="{Binding ClickedShopIcon}" CommandParameter="Road" Margin="0,0,10,0" Content="Road">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FFFFD243"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedShopName}" Value="Road">
                                                <Setter Property="Background" Value="#FF2AA34B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Height="60" Width="60" Command="{Binding ClickedShopIcon}" CommandParameter="Lake" Margin="0,0,10,0" Content="Lake">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FFFFD243"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedShopName}" Value="Lake">
                                                <Setter Property="Background" Value="#FF2AA34B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Height="60" Width="60" Command="{Binding ClickedShopIcon}" CommandParameter="Bridge" Margin="0,0,10,0" Content="Bridge">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FFFFD243"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedShopName}" Value="Bridge">
                                                <Setter Property="Background" Value="#FF2AA34B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>


                            <Button Height="60" Width="60" Command="{Binding ClickedShopIcon}" CommandParameter="Gazelle" Margin="0,0,10,0" Content="Gazelle">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FFFFD243"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedShopName}" Value="Gazelle">
                                                <Setter Property="Background" Value="#FF2AA34B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Height="60" Width="60" Command="{Binding ClickedShopIcon}" CommandParameter="Giraffe" Margin="0,0,10,0" Content="Giraffe">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FFFFD243"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedShopName}" Value="Giraffe">
                                                <Setter Property="Background" Value="#FF2AA34B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Height="60" Width="60" Command="{Binding ClickedShopIcon}" CommandParameter="Lion" Margin="0,0,10,0" Content="Lion">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FFFFD243"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedShopName}" Value="Lion">
                                                <Setter Property="Background" Value="#FF2AA34B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Height="60" Width="60" Command="{Binding ClickedShopIcon}" CommandParameter="Leopard" Margin="0,0,10,0" Content="Leopard">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FFFFD243"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedShopName}" Value="Leopard">
                                                <Setter Property="Background" Value="#FF2AA34B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Height="60" Width="60" Command="{Binding ClickedShopIcon}" CommandParameter="Cactus" Margin="0,0,10,0" Content="Cactus">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FFFFD243"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedShopName}" Value="Cactus">
                                                <Setter Property="Background" Value="#FF2AA34B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Height="60" Width="60" Command="{Binding ClickedShopIcon}" CommandParameter="Greasewood" Margin="0,0,10,0" Content="Greasewood">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FFFFD243"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedShopName}" Value="Greasewood">
                                                <Setter Property="Background" Value="#FF2AA34B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Height="60" Width="60" Command="{Binding ClickedShopIcon}" CommandParameter="PalmTree" Margin="0,0,10,0" Content="Palm tree">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FFFFD243"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedShopName}" Value="PalmTree">
                                                <Setter Property="Background" Value="#FF2AA34B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Height="60" Width="60" Margin="0,0,10,0" Background="#FFFFD243">Jeep</Button>
                            <Button Height="60" Width="60" Command="{Binding ClickedShopIcon}" CommandParameter="Guard" Margin="0,0,10,0" Content="Guard">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FFFFD243"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedShopName}" Value="Guard">
                                                <Setter Property="Background" Value="#FF2AA34B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Grid.Column="2">
                            <Button Command="{Binding ClickedShopIcon}" CommandParameter="Sell" HorizontalAlignment="Right" Height="60" Width="60" FontSize="20px" FontWeight="Bold" Content="Sell">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CAction}" Value="{x:Static vm:ViewModel+ClickAction.NOTHING}">
                                                <Setter Property="Background" Value="#FFFFD243"/>
                                            </DataTrigger>

                                            <DataTrigger Binding="{Binding CAction}" Value="{x:Static vm:ViewModel+ClickAction.TARGET}">
                                                <Setter Property="Background" Value="#FFFFD243"/>
                                            </DataTrigger>

                                            <DataTrigger Binding="{Binding CAction}" Value="{x:Static vm:ViewModel+ClickAction.BUY}">
                                                <Setter Property="Background" Value="#FFFFD243"/>
                                            </DataTrigger>

                                            <DataTrigger Binding="{Binding CAction}" Value="{x:Static vm:ViewModel+ClickAction.SELL}">
                                                <Setter Property="Background" Value="#FF2AA34B"/>
                                            </DataTrigger>

                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                    <Border Grid.Column="2" BorderBrush="#FF6C5200" BorderThickness="20" Margin="0,-90,0,0" HorizontalAlignment="Right">
                        <Grid Background="#FFC3DBAD">
                            <Grid.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="15"/>
                                    <Setter Property="Margin" Value="5,2,10,0"/>
                                </Style>
                            </Grid.Resources>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Visitors" Grid.Row="0" Grid.Column="0"/>
                            <TextBlock Text="0" Grid.Row="0" Grid.Column="1"/>

                            <TextBlock Text="Gazelle" Grid.Row="1" Grid.Column="0"/>
                            <TextBlock Text="0" Grid.Row="1" Grid.Column="1"/>

                            <TextBlock Text="Giraffe" Grid.Row="2" Grid.Column="0"/>
                            <TextBlock Text="0" Grid.Row="2" Grid.Column="1"/>

                            <TextBlock Text="Lion" Grid.Row="3" Grid.Column="0"/>
                            <TextBlock Text="0" Grid.Row="3" Grid.Column="1"/>

                            <TextBlock Text="Leopard" Grid.Row="4" Grid.Column="0"/>
                            <TextBlock Text="0" Grid.Row="4" Grid.Column="1"/>

                            <TextBlock Text="Jeep" Grid.Row="5" Grid.Column="0"/>
                            <TextBlock Text="0" Grid.Row="5" Grid.Column="1"/>

                            <TextBlock Text="Guard" Grid.Row="6" Grid.Column="0"/>
                            <TextBlock Text="0" Grid.Row="6" Grid.Column="1"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
